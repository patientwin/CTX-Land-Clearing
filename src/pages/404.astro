---
import BaseLayout from '@/layouts/BaseLayout.astro';

const seo = {
  title: 'Page Not Found | CTX Land Clearing',
  description: 'The page you requested is unavailable.',
  path: '/404/',
  noindex: true
};
---
<BaseLayout seo={seo}>
  <section class="section-standard">
    <div class="container-standard max-w-xl text-center">
      <h1 class="font-[var(--font-display)] text-6xl uppercase">404</h1>
      <p class="mt-3 text-sm text-black/80">The page you requested was not found.</p>
      <a href="/" class="btn-primary mt-6">Back to Home</a>
    </div>
  </section>
</BaseLayout>
