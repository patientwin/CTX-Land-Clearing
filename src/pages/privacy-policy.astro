---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';

const seo = {
  title: 'Privacy Policy | CTX Land Clearing',
  description: 'Privacy policy for CTX Land Clearing and Forestry Mulching form submissions and communications.',
  path: '/privacy-policy/'
};
---
<BaseLayout seo={seo}>
  <section class="section-standard">
    <div class="container-standard max-w-3xl">
      <Breadcrumbs items={[{ label: 'Home', href: '/' }, { label: 'Privacy Policy', href: '/privacy-policy/' }]} />
      <h1 class="mt-4 font-[var(--font-display)] text-5xl uppercase">Privacy Policy</h1>
      <p class="mt-4 text-sm text-black/80">We use submitted contact information to respond to project inquiries and estimate requests. We do not sell personal information. Data may be stored in trusted form and hosting systems used to operate this website.</p>
      <p class="mt-3 text-sm text-black/80">By submitting a form, you consent to project-related contact by phone, email, or text.</p>
    </div>
  </section>
</BaseLayout>
