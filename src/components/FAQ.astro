---
const { items } = Astro.props as { items: { q: string; a: string }[] };
---
<section class="section-standard" aria-labelledby="faq-heading">
  <div class="container-standard">
    <h2 id="faq-heading" class="font-[var(--font-display)] text-4xl uppercase">Frequently Asked Questions</h2>
    <div class="mt-6 space-y-3">
      {items.map((item) => (
        <details class="card card-faq">
          <summary class="cursor-pointer font-semibold text-brand-dark">{item.q}</summary>
          <p class="mt-3 text-sm text-[var(--color-muted)]">{item.a}</p>
        </details>
      ))}
    </div>
  </div>
</section>
